@model PessoaJuridica

<h1>Cadastrar nova pessoa juridica</h1>
<hr />
<form method="post" asp-action="Criar">
    <div class="row">
        <div class="col-10">
            <div class="row">
                <div class="col-3">
                    <label>
                        Razão Social:
                        <input class="form-control" type="text" asp-for="RazaoSocial" placeholder="Pandur" />
                    </label>
                </div>
            </div>
       
            <div class="row">
                <div class="col-3">
                    <label>
                        CNPJ
                        <input class="form-control" type="text" asp-for="CNPJ" placeholder="000.000.000-00" />
                    </label>
                </div>
            </div>
        
            <div class="row">
                <div class="col-5">
                    <label>
                        Endereço
                        <textarea class="form-control" asp-for="Endereco"></textarea>
                    </label>
                </div>
            </div>
        </div>
        <div class="col-2">
            <div class="row">
                <div class="col">
                    <input class="btn btn-primary" type="submit" value="Cadastrar pessoa juridica" />
                </div>
            </div>
        </div>

    </div>
</form>